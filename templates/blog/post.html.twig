{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="box flex-center">
        <div class="md:w-3/5 lg:w-2/3">
            <div class="my-14 flex-center">
                <div class="lg:w-2/3 text-center space-y-2">
                    <small class="block text-foreground-light">{{ post.createdAt|date("d/m/Y") }}</small>
                    <h1 class="text-5xl md:text-6xl font-bold">{{ post.title }}</h1>
                </div>
            </div>
            <img zoomable class="rounded w-full aspect-video object-cover object-top" src="{{ asset(post.imagePath) }}" alt="">
            <div class="post-content">
                {{ post.content|raw }}
            </div>
        </div>
    </div>
{% endblock %}
